<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    {{#if style}}
    <link rel="stylesheet" href="/public/css/{{style}}.css">
    {{/if}}
    <title>{{title}}</title>
</head>

<div id="page-wrap">
    {{> header}}
    {{> flashmessage}}
    {{{body}}}
</div>
{{> footer}}



{{!-- Sessions for login --}}
{{#if logged}}
<script>
    let ele = document.getElementById("logout-button");
    if (ele) {
        ele.onclick = (even) => {
            fetch('/users/logout', {
                method: "POST"
            })
            .then((data) => {
                location.replace('/');
            });
        }
    }
</script>
{{/if}}

</html>